@import '../mixins.styl'
json('../variables.json')

.main
    display: block
    &.animationOpacity
        opacity: 1
        transition: opacity 0.3s ease;
    &.animationHeight
        overflow: hidden;
        transition: height 0.3s ease;

.hidden
    &.animationOpacity
        opacity: 0
    &.animationHeight
        height: 0;
