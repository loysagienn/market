@import '../mixins.styl'
json('../variables.json')

.main
    box-sizing: border-box;
    padding: 5px;
    width: 50%;
    +maxWidth(1200px)
        width: 100%;

.tile
    position: relative
    padding: 0
    min-height: 100%

.preview
    float: left
    box-sizing: border-box
    width: 100px
    height: 100px
    border: 5px solid transparent;
    border-radius: 3px
    background-position: center center
    background-repeat: no-repeat
    background-size: contain

.info
    position: relative;
    box-sizing: border-box;
    min-height: 100px;
    margin-left: 100px;
    padding: 10px 10px 30px 10px

.price
    position: absolute;
    right: 10px;
    bottom: 10px;
    text-align: right;
    font-size: 16px;
    font-weight: bold;

.name
    font-weight: bold
    font-size: 14px
    margin-bottom: 5px

.description
    font-size: 12px

.shop
    color: c-special;
