@import '../mixins.styl'
json('../variables.json')

.main
    margin: 10px 5px
    padding: 0
    min-height: 100px

.preview
    float: left
    box-sizing: border-box
    width: 100px
    height: 100px
    border: 5px solid transparent;
    border-radius: 3px
    background-position: center center
    background-repeat: no-repeat
    background-size: contain

.info
    margin-left: 100px
    padding: 10px

.name
    font-weight: bold
    font-size: 14px
    margin-bottom: 5px

.description
    font-size: 12px

.shop
    color: c-main;
