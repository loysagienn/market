@import '../mixins.styl'
json('../variables.json')

.main
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    overflow: auto;
    color: c-white;

.settings
    min-height: 40px;
    padding: 10px 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    cursor: pointer;
    &:hover
        background-color: hover-background-color;

.checkbox
    float: left;
    height: 40px;
    width: 40px;

.text
    margin-left: 40px;
    padding-right: 10px;
    max-width: 800px;

.title
    padding: 10px 0 5px;
    line-height: 20px;
    font-size: 15px;

.description
    padding-bottom: 5px;
    font-size: 12px;
