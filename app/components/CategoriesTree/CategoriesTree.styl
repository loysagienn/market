@import '../mixins.styl'
json('../variables.json')

.main
    position: absolute
    box-sizing: border-box
    left: 0
    right: 0
    top: 0
    bottom: 0
    height: 50px
    border-bottom: 1px solid c-main
    shadow: default
    &.treeOpened
        .list
            +max-width(800px)
                left: 50px;
        .backBtn
            +max-width(800px)
                display: flex;

.list
    position: absolute
    left: 0
    right: 0
    top: 0
    height: 49px
    line-height: 49px
    font-size: fs-smaller

.backBtn
    display: none;
    position: absolute;
    left: 0;
    top: 0;
    width: 50px;
    height: 49px;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    &:hover
        background-color: hover-background-color

.popup
    position: fixed
    left: 0
    right: 0
    top: 50px
    height: 350px
    z-index: tree-z-index
    shadow: hover
    background-color: c-white
    +max-height(400px)
        height: auto;
        bottom: 0;
    .treeComponent
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 50px;
        border-bottom: 1px solid c-main
    .buttons
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        height: 50px;
        padding: 0 10px;
        display: flex;
        justify-content: flex-end;
        align-items: center;

.button
    margin-left: 10px
    min-width: 90px
    +max-width(800px)
        padding: 10px 15px;

.focusedCategoryName
    padding: 5px

.emptyPlaceholder
    padding: 0 10px

.emptyPlaceholderLoading
    padding: 2px 10px

.loading
    display: block
