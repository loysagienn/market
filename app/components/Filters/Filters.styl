@import '../mixins.styl'
json('../variables.json')

.main
    position: absolute
    left: -10px;
    right: 0;
    top: 0;
    bottom: 0;
    &.focused
        +maxWidth(800px)
            position: fixed;
            left: 0;
            top: 50px;
            background-color: c-main;
            .filterBtn
                display: none;
    .loading
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        background-color: c-main
        .loadingSvg
            fill: c-special

.filters
    box-sizing: border-box;
    position: absolute;
    left: 0;
    right: 0;
    top: 10px;
    bottom: 10px;
    overflow: auto;
    padding: 0 10px;
    +maxWidth(800px)
        bottom: 60px;

.filtersTile
    padding: 5px 0;

.filterBtn
    display: none;
    justify-content: center;
    align-items: center;
    position: fixed;
    right: 25px;
    bottom: 25px;
    width: 60px;
    height: 60px;
    border-radius: 100%;
    background-color: c-special;
    +maxWidth(800px)
        display: flex;
    .filterBtnSvg
        fill: c-white;

.buttons
    display: none;
    position: absolute;
    box-sizing: border-box;
    left: 0;
    right: 0;
    bottom: 0;
    height: 60px;
    padding: 0 10px;
    justify-content: center;
    align-items: center;
    +maxWidth(800px)
        display: flex;
    .button
        padding: 10px 15px;
        min-width: 120px;
        width: 100%;

.filter
    padding: 10px;
    &:hover
        background-color: c-gray-f8;

.filterNumeric
    display: block;

.filterBool
    display: block;
    .filterName
        cursor: pointer;

.filterName
    line-height: 24px;

.checkbox
    float: left;
    margin-right: 5px;

.filterControl
    padding-top: 5px;
    display: block;

.input
    margin: 0 -2px;
    padding: 5px 2px;
