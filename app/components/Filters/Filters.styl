@import '../mixins.styl'
json('../variables.json')

.main
    position: absolute
    left: -5px;
    right: 0;
    top: 0;
    bottom: 0;
    box-sizing: border-box;
    padding: 5px;
    overflow: auto;
    .loading
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        background-color: c-main
        .loadingSvg
            fill: c-white

.filterWrapper
    box-sizing: border-box;
    padding: 5px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    &:last-child
        border-bottom: 0;

.filter
    padding: 5px 0;
    color: white;
